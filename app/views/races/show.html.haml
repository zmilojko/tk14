%p#notice= notice

%p
  %b Category:
  = "#{@race.category.code} - #{@race.category.length}km (#{@race.category.description})"
%p
  %b Race time:
  = @race.race_time
%p
  %b Name:
  = @race.name
%p
  %b Description:
  = @race.description
%p
  %b Intermediate points:
  = @race.intermediate_points
%p
  %b Status:
  = @race.status
-if current_user.try(:is_admin?)
  = render 'next', race: @race
  = link_to 'Edit', edit_race_path(@race)
  \|
= link_to 'Back', races_path

- case @race.status
  - when 'not_started'
    %h2 Start list
  - when 'ongoing'
    %h2 Race standings
  - when 'completed'
    %h2 Final results

%table
  %tr
    -if @race.status != 'not_started'
      %th Position
    %th Starting number
    %th Competitor
    -timemarks = @race.all_timestamps; timemarks.shift
    -if @race.status != 'not_started'
      -timemarks.each do |timestamp|
        %th=timestamp.to_s.sub("_timestamp", "")

  - i = 0
  - winner_time = Hash[timemarks.map { |timestamp| [timestamp,nil] }]
  -puts "runs not sorted: #{@race.runs.inspect}"
  - puts "runs sorted: #{@race.runs_sorted.inspect}"
  - @race.runs_sorted.each do |run|
    %tr
      -if @race.status != 'not_started'
        %td= i=i+1
      %td= run.number
      %td= run.user.show_name
      -if @race.status != 'not_started'
        -if not run.times.empty?
          -timemarks.each do |timestamp|
            %td=format_time(a = run.elapsed_time(timestamp), winner_time[timestamp])
            -winner_time[timestamp]=a if winner_time[timestamp].nil?
