= form_for @run do |f|
  - if @run.errors.any?
    #error_explanation
      %h2= "#{pluralize(@run.errors.count, "error")} prohibited this run from being saved:"
      %ul
        - @run.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :race_id
    = f.number_field :race_id
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :number
    = f.text_field :number
  .field
    = f.label :times
    = f.text_field :times
  .actions
    = f.submit 'Save'
