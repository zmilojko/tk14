= form_for @run do |f|
  - if @run.errors.any?
    #error_explanation
      %h2= "#{pluralize(@run.errors.count, "error")} prohibited this run from being saved:"
      %ul
        - @run.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :race_id
    = f.collection_select :race_id, Race.all, :id, :label    
  .field
    = f.label :user_id
    = f.collection_select :user_id, User.all, :id, :display_name
  .field
    = f.label :number
    = f.text_field :number
  .field
    = f.label :times
    = f.text_field :times
  .actions
    = f.submit 'Save'
