= form_for @usr, url: (@usr.id ? usr_path(@usr) : usrs_path) do |f|
  - if @usr.errors.any?
    #error_explanation
      %h2= "#{pluralize(@usr.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @usr.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.label :password_confirmation
    = f.text_field :password_confirmation
  .actions
    = f.submit 'Save'
